set -e
[ "$DEBUG" = "" ] || set -x

dir=`dirname $0`
dir=`cd $dir; pwd`
PROOT=${PROOT:-proot}

outfile=:stderr
ccregexp="^\(gcc\|g++\|cc\|c++\)\$"

version() {
    echo "atos-audit version @VERSION@"
}

usage() {
    cat <<EOF

Usage: atos-audit [options] [--] [command...]

Audit Options:
      -r <ccdriver_re> : specify the compiler driver as a regexp for the basename [default: $ccregexp]
      -c <ccdriver> : alternatively specify the exact compiler driver basename

Output File Options:
      -o <outfile> : output audit file into <file> [default: $outfile]

Misc Options
      -h : output usage
      -v : output version

EOF
}

cleanup() {
    :
}
trap "cleanup; exit 3" TERM STOP
trap "cleanup" EXIT

while getopts vhc:r:o: opt; do
    case $opt in
	o) outfile="$OPTARG"
	    ;;
	c) ccregexp="^$OPTARG\$"
	    ;;
	r) ccregexp="$OPTARG"
	    ;;
	v) version; exit 0
	    ;;
	h) usage; exit 0
	    ;;
	?) usage; exit 2
	    ;;
    esac
done

shift $((OPTIND - 1))

exec env PROOT_ADDON_CC_DEPS=1 PROOT_ADDON_CC_DEPS_OUTPUT="$outfile" PROOT_ADDON_CC_DEPS_CCRE="$ccregexp" $PROOT -w $PWD / ${1+"$@"}
