set -e
[ "$DEBUG" = "" ] || set -x

dir=`cd \`dirname $0\`; pwd`
libdir=`cd $dir/../lib/atos; pwd`
PROOT=${PROOT:-proot}

configuration_path="./atos-configurations"
opt_seed=""
opt_debug=""
opt_profdir=""
nb_iter=100
nb_runs=1
flags_file=""
opt_levels="-Os,-O2,-O3"
opt_variants="base"

#######################

version() {
    echo "atos-explore-optim version @VERSION@"
}

usage() {
    cat <<EOF

Usage: atos-explore-optim [options] [variants]

Configuration Options:
      -C <path> : configuration path [default: $configuration_path]
      -n <nb> : number of executions of <run_script> [default: $nb_runs]
      -b <path> : remote path to profile files [default: none]

Exploration Options:
      -F <flags_filename> : flags list filename [default: <configuration_path>/flags.optim.cfg]
      -O <optim_levels> : optimization levels [default: $opt_levels]
      -V <variants> : list of optimization variants [ex: base,fdo,lto,fdo+lto] [default: $opt_variants]
      -S <seed> : seed for random generator [default: none]
      -M <nb> : number of exploration loop iterations [default: $nb_iter]

Misc Options
      -q : quiet output
      -d : debug mode
      -h : output usage
      -v : output version

EOF
}

cleanup() {
    :
}
trap "cleanup; exit 3" TERM STOP
trap "cleanup" EXIT

while getopts C:n:b:F:O:V:S:M:qdvh opt; do
    case $opt in
	C) configuration_path="$OPTARG"
	    ;;
	n) nb_runs="$OPTARG"
	    ;;
	b) opt_profdir="-B $OPTARG"
	    ;;
	F) flags_file="$OPTARG"
	    ;;
	O) opt_levels="$OPTARG"
	    ;;
	V) opt_variants="$OPTARG"
	    ;;
	S) opt_seed="--seed=$OPTARG"
	    ;;
	M) nb_iter="$OPTARG"
	    ;;
	q) opt_debug="-q"
	    ;;
	d) opt_debug="-d"
	    ;;
	v) version; exit 0
	    ;;
	h) usage; exit 0
	    ;;
	?) usage; exit 2
	    ;;
    esac
done

shift $((OPTIND - 1))

if [ "$configuration_path" = "" ]; then
    echo "`basename $0`: error: missing configuration path" >&2
    exit 1
fi

[ "$flags_file" != "" ] || flags_file=$configuration_path/flags.optim.cfg

if [ ! -f "$configuration_path/build.audit" -o ! -f "$configuration_path/run.audit" ]; then
    echo "`basename $0`: error: missing build/run audit, use atos-init tool for the initial setup" >&2
    exit 1
fi

if [ ! -f "$flags_file" ]; then
    echo "`basename $0`: error: file not found: $flags_file" >&2
    exit 1
fi

$libdir/atos_toolkit.py -C $configuration_path \
    $opt_debug $opt_seed $opt_profdir --max=$nb_iter -n $nb_runs \
    --optlvl=$opt_levels --variants=$opt_variants --flags=$flags_file \
    --gen-rnd-uniform-deps "$@"

