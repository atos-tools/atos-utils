set -e
[ "$DEBUG" = "" ] || set -x

dir=`dirname $0`
dir=`cd $dir; pwd`
PROOT=${PROOT:-proot}

run_script=""
build_script=""
executable=""
configuration_path="./atos-configurations"
verbose="0"
quiet="0"
clean="0"

version() {
    echo "atos-explore version @VERSION@"
}

usage() {
    cat <<EOF

Usage: atos-explore [options] [executables...]

Run Options
      -b <build_script> : build_script to be executed [default: $build_script]

Run Options
      -r <run_script> : run_script to be executed [default: $run_script]

Executable File Options:
      -e <executables> : executables to be instrumented [default: args of command]

Configuration Options:
      -C <path> : configuration path [default: $configuration_path]
      -c : clean results and profiles before exploration

Misc Options
      -q : quiet output
      -d : debug mode
      -h : output usage
      -v : output version

EOF
}

cleanup() {
    [ ! -f "$tmpfile" ] || rm -f "$tmpfile"
}
trap "cleanup; exit 3" TERM STOP
trap "cleanup" EXIT
tmpfile=`mktemp /tmp/atos-inst.XXXXXX`


while getopts vhdqce:r:b:C: opt; do
    case $opt in
	e) executables="$OPTARG"
	    ;;
	C) configuration_path="$OPTARG"
	    ;;
	r) run_script="$OPTARG"
	    ;;
	b) build_script="$OPTARG"
	    ;;
	c) clean=1
	    ;;
	d) verbose=1
	    ;;
	q) quiet=1
	    ;;
	v) version; exit 0
	    ;;
	h) usage; exit 0
	    ;;
	?) usage; exit 2
	    ;;
    esac
done

shift $((OPTIND - 1))

[ "$executables" != "" ] || executables="$@"

if [ "$configuration_path" = "" ]; then
    echo "`basename $0`: error: missing configuration path" >&2
    exit 1
fi

mkdir -p "$configuration_path"
configuration_path=`cd "$configuration_path"; pwd`

identifier="session-$$"
if [ -f "$configuration_path/targets" ]; then
    executables=`cat "$configuration_path/targets"`
fi

if [ "$executables" = "" ]; then
    # By default audit all generated executables 
    executables=-a
fi

if [ "$build_script" != "" ]; then
    [ "$quiet" = "1" ] || echo "Auditing build ($identifier)..."
    $dir/atos-audit $build_script
fi

if [ "$run_script" != "" ]; then
    [ "$quiet" = "1" ] || echo "Auditing run ($identifier)..."
    $dir/atos-raudit $run_script
fi

[ "$quiet" = "1" ] || echo "Computing build dependencies ($identifier)..."
$dir/atos-deps $executables

if [ "$clean" = "1" ]; then
    [ "$quiet" = "1" ] || echo "Cleaning all profiles ($identifier)..."
    rm -rf "$configuration_path"/profiles
    [ "$quiet" = "1" ] || echo "Cleaning all results ($identifier)..."
    rm -rf "$configuration_path"/results.db
fi

[ "$quiet" = "1" ] || echo "Running reference execution ($identifier: REF)..."
$dir/atos-run -r || echo "Variant run FAILURE ($identifier: REF)" 

for gopt in "-O1" "-O2" "-Os" "-O3"; do
    for opts in "" "-flto"; do
	options="$gopt $opts"
	variant=`echo $options | sed 's/ //g'`
	[ "$quiet" = "1" ] || echo "Building ($identifier: $options)..."
	$dir/atos-opt -a "$options" >"$configuration_path/build$variant.log" 2>&1 || echo "Variant build FAILURE ($identifier: $options)" 
	[ "$quiet" = "1" ] || echo "Running ($identifier: $options)..."
	$dir/atos-run -r -a "$options" >"$configuration_path/run$variant.log" 2>&1 || echo "Variant run FAILURE ($identifier: $options)" 
    done
    [ "$quiet" = "1" ] || echo "Profiling build ($identifier: -fprofile-generate $gopt)..."
    pvariant=`echo $gopts | sed 's/ //g'`
    $dir/atos-profile -g "$gopt" >"$configuration_path/build-fprofile-generate$pvariant.log" 2>&1 || failure=true
    if $failure; then
	echo "Variant profiling FAILURE ($identifier: -fprofile-generate $gopt)" 
    else
	for opts in "" "-flto" "-funroll-loops" "-flto -funroll-loops"; do
	    options="$gopt $opts"
	    variant=`echo $options | sed 's/ //g'`
	    [ "$quiet" = "1" ] || echo "Building ($identifier: -fprofile-use $options)..."
	    $dir/atos-opt -u "$gopt" -a "$options" >"$configuration_path/build-fprofile-use$pvariant$variant.log" 2>&1 || echo "Variant build FAILURE ($identifier: -fprofile-use $options)" 
	    [ "$quiet" = "1" ] || echo "Running ($identifier: -fprofile-use $options)..."
	    $dir/atos-run -r -u "$gopt" -a "$options" >"$configuration_path/run-fprofile-use$pvariant$variant.log" 2>&1 || echo "Variant run FAILURE ($identifier: -fprofile-use $options)" 
	done
    fi
done
if [ "$quiet" != "1" ]; then
    echo "Best performance variant ($identifier)..."
    $dir/atos-play -p -f time
    echo "Best size variant ($identifier)..."
    $dir/atos-play -p -f size
fi
if [ "$quiet" != "1" ]; then
    echo "Completed ($identifier)."
fi
