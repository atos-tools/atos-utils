set -e
[ "$DEBUG" = "" ] || set -x

dir=`dirname $0`
dir=`cd $dir; pwd`

run_script=""
build_script=""
executable=""
configuration_path="./atos-configurations"
verbose="0"
quiet="0"
clean="0"
nbruns="1"
opt_q=""
opt_c=""
opt_rebuild=""
get_results_script=""
remote_profile_path=""

version() {
    echo "atos-explore version @VERSION@"
}

usage() {
    cat <<EOF

Usage: atos-explore [options] [executables...]

Build Options
      -b <build_script> : build_script to be executed [default: $build_script]
      -f : force rebuild by running build script instead of audited build
      -B <path> : remote path to profile files [default: none]

Run Options
      -r <run_script> : run_script to be executed [default: $run_script]
      -t <get_results_script> : get_results_script to be executed [default: none]
      -n <nb> : number of executions of <run_script> [default: $nbruns]

Executable File Options:
      -e <executables> : executables to be instrumented [default: args of command or all generated executables]

Configuration Options:
      -C <path> : configuration path [default: $configuration_path]
      -c : clean results and profiles before exploration

Misc Options
      -q : quiet output
      -d : debug mode
      -h : output usage
      -v : output version

EOF
}

cleanup() {
    [ ! -f "$tmpfile" ] || rm -f "$tmpfile"
}
trap "cleanup; exit 3" TERM STOP
trap "cleanup" EXIT
tmpfile=`mktemp /tmp/atos-inst.XXXXXX`


while getopts vhdqcfe:r:b:B:t:C:n: opt; do
    case $opt in
	e) executables="$OPTARG"
	    ;;
	C) configuration_path="$OPTARG"
	    ;;
	r) run_script="$OPTARG"
	    ;;
	b) build_script="$OPTARG"
	    ;;
	B) remote_profile_path="$OPTARG"
	    ;;
	t) get_results_script="$OPTARG"
	    ;;
	n) nbruns="$OPTARG"
	    ;;
	c) clean=1; opt_c=-c
	    ;;
	d) verbose=1
	    ;;
	q) quiet=1; opt_q=-q
	    ;;
	f) opt_rebuild=-f
	    ;;
	v) version; exit 0
	    ;;
	h) usage; exit 0
	    ;;
	?) usage; exit 2
	    ;;
    esac
done

shift $((OPTIND - 1))

[ "$executables" != "" ] || executables="$@"

$dir/atos-init -C "$configuration_path" \
    -b "$build_script" -r "$run_script" -t "$get_results_script" \
    -B "$remote_profile_path" -e "$executables" -n "$nbruns" $opt_rebuild $opt_q $opt_c

for gopt in "-O2" "-Os" "-O3"; do
    for opts in "" "-flto" "-funroll-loops" "-flto -funroll-loops"; do
	options="$gopt $opts"
	$dir/atos-build -C "$configuration_path" $opt_q -a "$options" && $dir/atos-run -C "$configuration_path" -n "$nbruns" $opt_q -r -a "$options" || true
    done
    failure=false
    $dir/atos-profile -C "$configuration_path" $opt_q -b "$remote_profile_path" -g "$gopt" || failure=true
    if $failure; then
	# skipping profile variants
	:
    else
	for opts in "" "-flto" "-funroll-loops" "-flto -funroll-loops"; do
	    options="$gopt $opts"
	    $dir/atos-build -C "$configuration_path" $opt_q -u "$gopt" -a "$options" && $dir/atos-run -C "$configuration_path" -n "$nbruns" $opt_q -b "$remote_profile_path" -r -u "$gopt" -a "$options" || true
	done
    fi
done

if [ "$quiet" != "1" ]; then
    echo "Completed."
fi
