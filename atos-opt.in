set -e
[ "$DEBUG" = "" ] || set -x

dir=`cd \`dirname $0\`; pwd`
libdir=`cd $dir/../lib/atos; pwd`

options=""
configuration_path="./atos-configurations"
u_set=0
l_set=0
f_set=0
uopts=""
aopts=""
opt_q=""
opt_r=""
nbruns=1
no_replay=0
remote_profile_path=""

version() {
    echo "atos-opt version @VERSION@"
}

usage() {
    cat <<EOF

Usage: atos-opt [options] [--] [command...]

Configuration Options:
      -C <path> : configuration path [default: $configuration_path]

Optimization Options:
      -a "options" : append given options to the compilation commands [default: $options]
      -u "options" : use profile variant deduced by opts [default: $uopts]
      -f : use feedback directed optimizations [default: no]
      -l : use link time optimizations [default: no]

Profile options:
      -b <path> : remote path to profile files [default: none]

Run Options:
      -n <nb> : number of executions [default: $nbruns]
      -k : keep existing results if any [default: false]

Results options:
      -r : record results

Misc Options
      -q : quiet output
      -h : output usage
      -v : output version

EOF
}

cleanup() {
    :
}
trap "cleanup; exit 3" TERM STOP
trap "cleanup" EXIT

while getopts C:a:lu:fb:n:krqvh opt; do
    case $opt in
	C) configuration_path="$OPTARG"
	    ;;
	a) options="$OPTARG"
	    ;;
	u) u_set=1; uopts="$OPTARG"
	    ;;
	f) u_set=1; f_set=1
	    ;;
	l) l_set=1
	    ;;
	b) remote_profile_path="$OPTARG"
	    ;;
	n) nbruns="$OPTARG"
	    ;;
	k) no_replay=1
	    ;;
	r) opt_r=-r
	    ;;
	q) opt_q=-q
	    ;;
	v) version; exit 0
	    ;;
	h) usage; exit 0
	    ;;
	?) usage; exit 2
	    ;;
    esac
done

shift $((OPTIND - 1))

[ "$f_set" = 0 -o "$uopts" != "" ] || uopts="$options"
[ "$l_set" = 0 ] || options="$options -flto"

if [ "$no_replay" = "1" ]; then
    if [ "$u_set" = 1 ]; then
	variant=OPT-fprofile-use`echo $uopts $options | sed 's/ //g'`
    elif [ "$options" != "" ]; then
	variant=OPT`echo $options | sed 's/ //g'`
    else
	variant=REF
    fi
    results=`$libdir/atos_lib.py query -q "variant:$variant"`
    if [ "$results" != "None" ]; then
	echo "Skipping variant $variant..."
	exit 0
    fi
fi

if [ "$u_set" = 1 ]; then
    $dir/atos-profile -C "$configuration_path" $opt_q -b "$remote_profile_path" -g "$uopts"
    $dir/atos-build -C "$configuration_path" $opt_q -u "$uopts" -a "$options"
    $dir/atos-run -C "$configuration_path" $opt_q $opt_r -n "$nbruns" -u "$uopts" -a "$options"
else
    $dir/atos-build -C "$configuration_path" $opt_q -a "$options"
    $dir/atos-run -C "$configuration_path" $opt_q $opt_r -n "$nbruns" -a "$options"
fi
