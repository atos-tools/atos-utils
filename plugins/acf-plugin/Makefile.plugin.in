builddir=@builddir@
srcdir=@srcdir@
prepdir=@prepdir@
testdir=$(srcdir)/test

SRC= $(wildcard $(prepdir)/prep/*.c)

TESTC=$(wildcard $(testdir)/*.c)
TESTCPP=$(wildcard $(testdir)/*.cpp)

COMPILER=@CC@
CFLAGS=@CFLAGS@
CPPFLAGS=@CPPFLAGS@

TESTGCC=gcc
TESTGPP=g++
TESTCFLAGS=
TESTCPPFLAGS=

include $(srcdir)/common/common.mk

$(builddir)/Makefile.plugin: $(srcdir)/Makefile.plugin.in
	cd $(builddir) && ./config.status
